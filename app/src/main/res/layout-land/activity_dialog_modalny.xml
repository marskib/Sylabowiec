<ScrollView
    android:id="@+id/sv_DialogModalny"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/text_margin"
    android:scrollbars="vertical"
    android:fadeScrollbars="false"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="-5dp"
        android:padding="0dp"
        android:textStyle="bold"
        android:textSize="@dimen/nazwa_text_rozmiar_uwaga_na_huawei"
        android:layout_marginLeft="@dimen/maly_odstep"
        android:layout_marginRight="@dimen/maly_odstep"
        android:text="Układanie wyrazów z liter"/>

-->

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/autyzmsoft"/>

    <TextView
        android:id="@+id/autyzmsoftpl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="AutyzmSoft.pl"
        android:autoLink="web"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/maly_odstep"
        android:textSize="@dimen/nazwa_text_rozmiar_uwaga_na_huawei">
    </TextView>

    <TextView
      android:id="@+id/tvSettInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:textSize="@dimen/nazwa_text_rozmiar_uwaga_na_huawei"
        android:text="Długie dotknięcie na obrazku - Ustawienia"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maly_odstep"
        android:layout_marginLeft="@dimen/text_margin"
        android:textSize="@dimen/nazwa_text_rozmiar_uwaga_na_huawei"
        android:text="Krótkie dotknięcie na obrazku - Odegraj ponownie"/>

    <Button
        android:id="@+id/btn_OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nazwa_text_rozmiar_uwaga_na_huawei"
        android:onClick="onClickbtnOK"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/nazwa_text_rozmiar_uwaga_na_huawei"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:drawableLeft="@drawable/tick"
        android:text="     START        "/>

    </LinearLayout>

</ScrollView>

